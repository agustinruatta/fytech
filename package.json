{
  "name": "fytech",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "up": "cp package.json docker/ && cp package-lock.json docker && cd docker && docker-compose --env-file ./../.env up -d && cd ../",
    "down": "cd docker && docker-compose --env-file ./../.env down && cd ../",
    "ps": "cd docker && docker-compose --env-file ./../.env ps && cd ../",
    "sh": "docker exec -it fytech_backend /bin/bash",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migrations:run": "npm run typeorm migration:run -- -d src/Shared/Database/MigrationsDataSource.ts",
    "migrations:generate": "npm run typeorm -- -d src/Shared/Database/MigrationsDataSource.ts migration:generate src/Shared/Database/Migrations/$npm_config_name",
    "migrations:create": "npm run typeorm -- migration:create src/Shared/Database/Migrations/$npm_config_name",
    "migrations:revert": "npm run typeorm -- -d src/Shared/Database/MigrationsDataSource.ts migration:revert",
    "migrations:drop": "npm run typeorm -- -d src/Shared/Database/MigrationsDataSource.ts schema:drop",
    "migrations:run:test": "NODE_ENV=test npm run typeorm migration:run -- -d src/Shared/Database/MigrationsDataSource.ts",
    "migrations:drop:test": "NODE_ENV=test npm run typeorm -- -d src/Shared/Database/MigrationsDataSource.ts schema:drop",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/e2e/config/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.1",
    "@nestjs/typeorm": "^10.0.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "currency.js": "^2.0.4",
    "dotenv-flow": "^3.3.0",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nock": "^13.3.1",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
